<div class="container mt-3">

  <div class="row ml-3">
    <div class="offset-md-3 col-md-6 offset-md-3">
      <%= form_with model: @lesson, class: "form", id: "contact-form", multipart: true do |f| %>
        <div class="form-group">
          <%= f.label "Titre du cours", class: "form-label" %>
          <%= f.text_field :title, class: "form-control", placeholder: "Math", required: true %>
        </div>
        <div class="form-group">
          <%= f.label "Description", class: "form-label" %>
          <%= f.text_area :description, class: "form-control", placeholder: "DÃ©cris en quoi il est beau", required: true, minlength: "20", maxlength: "5000" %>
        </div>
        <div class="form-group">
          <%= f.label "Prix", class: "form-label" %>
          <%= f.number_field :number_of_credit, class: "form-control", placeholder: "12", required: true, min: 1 %>
        </div>
        <div class="form-group text-center my-3">
          <%= f.label "Ajouter une image", class: "form-label" %>
          <br>
          <%= f.file_field :picture , accept: 'image/png,image/gif,image/jpeg' %>
        </div>

        <div class="text-center">
          <%= f.submit "Ajouter mon chaton", class: "btn btn-success" %>
        </div>
      <%end%>
    </div>
  </div>
</div>